<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="24dp"
    tools:context=".activities.StudentDetailsActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="64dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:drawableStartCompat="@mipmap/ic_launcher"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="32sp"
            android:fontFamily="@font/signlode_font"
            android:textColor="@android:color/white"
            android:text="@string/app_name" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:fontFamily="@font/quick_sand"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:text="Enter your college details" />

        <EditText
            android:id="@+id/inputName"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:background="@drawable/edit_txt_bg"
            android:hint="Roll No."
            app:backgroundTint="@null"
            android:includeFontPadding="false"
            android:fontFamily="@font/quick_sand"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="12dp"
            android:drawableStart="@drawable/custom_person_ic"
            android:drawablePadding="8dp"
            android:inputType="textPersonName" />

    </LinearLayout>
</LinearLayout>
